{
  "compilerOptions": {
    //JS 최신버전
    "target": "ESNext",
    "module": "ESNext",
    // 컴파일 후 JS파일들이 위치할 곳 => dist
    "outDir": "dist",
    // 엄격한 타입 검사의 수준을 조절
    "strict": false,
    // 타입스크립트가 각각의 파일을 어떤 모듈로 감지할지에 대한 옵션

    "moduleDetection": "force",
    "moduleResolution": "Node"
  },
  // 'src' 라는 경로 아래에 있는 모든 파일을 포함해서 한번에 컴파일해라
  // 터미널에 경로없이 tsc 만 입력해도 src 안에 있는 모든 파일을 한번에 컴파일함
  "include": ["src"]
}
